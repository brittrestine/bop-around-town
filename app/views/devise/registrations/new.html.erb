<div class="container devise-container">

<h1>sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: " enter email" %>
  </div>

  <div class="field field-password">
    <%= f.password_field :password, autocomplete: "off" , placeholder: " password" %>
  </div>

  <div class="field field-password">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: " password confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", id: "sign-up-but" %>
  </div>
<% end %>

</div>

<div class="loading hidden">
  <span>boppin'</span>
</div>

